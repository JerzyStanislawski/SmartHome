
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"/>

    <Button
        android:id="@+id/button_osw_parter"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:onClick="navigateOswietlenieParter"
        android:text="Oświetlenie parter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOswietlenieParterOff"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="0dp"
        android:onClick="navigateOswietlenieParterOff"
        android:text="OFF"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/button_osw_parter"
        app:layout_constraintTop_toTopOf="@+id/button_osw_parter" />

    <Button
        android:id="@+id/button_osw_poddasze"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:onClick="navigateOswietleniePoddasze"
        android:text="Oświetlenie poddasze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_osw_parter" />

    <Button
        android:id="@+id/buttonOswietleniePoddaszeOff"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
        android:onClick="navigateOswietleniePoddaszeOff"
        android:text="OFF"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/button_osw_poddasze"
        app:layout_constraintTop_toTopOf="@+id/button_osw_poddasze" />

    <Button
        android:id="@+id/button_rolety_parter"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="64dp"
        android:onClick="navigateRoletyParter"
        android:text="Rolety parter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_osw_poddasze" />

    <Button
        android:id="@+id/buttonRoletyParterUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:onClick="navigateRoletyParterUp"
        android:text="↑"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_rolety_parter"
        app:layout_constraintTop_toBottomOf="@id/button_osw_poddasze" />

    <Button
        android:id="@+id/buttonRoletyParterDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:onClick="navigateRoletyParterDown"
        android:text="↓"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonRoletyParterUp"
        app:layout_constraintTop_toBottomOf="@id/button_osw_poddasze" />

    <Button
        android:id="@+id/button_rolety_poddasze"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="65dp"
        android:onClick="navigateRoletyPoddaszze"
        android:text="Rolety poddasze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_rolety_parter" />

    <Button
        android:id="@+id/buttonRoletyPoddaszeUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:onClick="navigateRoletyPoddaszeUp"
        android:text="↑"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_rolety_poddasze"
        app:layout_constraintTop_toBottomOf="@id/buttonRoletyParterUp" />

    <Button
        android:id="@+id/buttonRoletyPoddaszeDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:onClick="navigateRoletyPoddaszeDown"
        android:text="↓"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonRoletyPoddaszeUp"
        app:layout_constraintTop_toBottomOf="@id/buttonRoletyParterDown" />
</android.support.constraint.ConstraintLayout>