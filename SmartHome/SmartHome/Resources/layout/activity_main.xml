<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smarthome.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"/>

    <Button
        android:id="@+id/button_lights_ground"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:onClick="NavigateLightsGround"
        android:text="@string/activity_main_button_lights_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_lights_ground_off"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="0dp"
        android:onClick="NavigateLightsGroundOff"
        android:text="@string/common_off"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/button_lights_ground"
        app:layout_constraintTop_toTopOf="@+id/button_lights_ground" />

    <Button
        android:id="@+id/button_lights_attic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:onClick="NavigateLightsAttic"
        android:text="@string/activity_main_button_lights_attic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lights_ground" />

    <Button
        android:id="@+id/button_lights_attic_off"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
        android:onClick="NavigateLightsAtticOff"
        android:text="@string/common_off"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/button_lights_attic"
        app:layout_constraintTop_toTopOf="@+id/button_lights_attic" />

    <Button
        android:id="@+id/button_blinds_ground"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="64dp"
        android:onClick="NavigateBlindsGround"
        android:text="@string/activity_main_button_blinds_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_lights_attic" />

    <Button
        android:id="@+id/button_blinds_ground_up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:onClick="NavigateBlindsGroundUp"
        android:text="@string/common_up"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_blinds_ground"
        app:layout_constraintTop_toBottomOf="@id/button_lights_attic" />

    <Button
        android:id="@+id/button_blinds_ground_down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:onClick="NavigateBlindsGroundDown"
        android:text="@string/common_down"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_blinds_ground_up"
        app:layout_constraintTop_toBottomOf="@id/button_lights_attic" />

    <Button
        android:id="@+id/button_blinds_attic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="65dp"
        android:onClick="NavigateBlindsAttic"
        android:text="@string/activity_main_button_blinds_attic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_blinds_ground" />

    <Button
        android:id="@+id/button_blinds_attic_up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:onClick="NavigateBlindsAtticUp"
        android:text="@string/common_up"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_blinds_attic"
        app:layout_constraintTop_toBottomOf="@id/button_blinds_ground_up" />

    <Button
        android:id="@+id/button_blinds_attic_down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:onClick="NavigateBlindsAtticDown"
        android:text="@string/common_down"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_blinds_attic_up"
        app:layout_constraintTop_toBottomOf="@id/button_blinds_ground_down" />
</androidx.constraintlayout.widget.ConstraintLayout>